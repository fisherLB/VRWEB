 <style>
    .help3 {
        margin-top: 80px;
    }
        .help3 li {
            color: #fff;
            text-align: center;
            float: left;
            width: 33.33333%;
        }
            .help3 li h5 {
                font-size: 18px;
                margin-top: 5px;
            }

            .help3 li p {
                font-size: 14px;
                margin-top: 20px;
                color: #9cfbfb;
            }

            .help3 li button {
                cursor: pointer;
                transition: all .3s ease-in 0s;
                border: 1px solid #fff;
                background-color: transparent;
                color: #fff;
                padding: 6px 20px;
                margin-top: 40px;
                display: inline-block;
            }

                .help3 li button:hover {
                    background-color: #fff;
                    color: #2299b4;
                }

            .help3 li > div {
                height: 65px;
            }

    .cjwt h2 {
        font-size: 18px;
        border-bottom: 1px solid #e9e9e8;
        padding-bottom: 10px;
        margin-top: 10px;
    }

    .wenti-bottom {
        overflow: hidden;
        min-height: 140px;
        margin-top: 25px;
    }

        .wenti-bottom dl {
            float: left;
            width: 30.3333%;
            margin-left: 2.7%;
        }

            .wenti-bottom dl dt {
                font-size: 16px;
                margin-bottom: 18px;
                margin-left: -25px;
                vertical-align: middle;
            }

                .wenti-bottom dl dt > img {
                    margin-right: 5px;
                }

            .wenti-bottom dl dd {
                line-height: 2;
            }


    </style >


<div style="float: left; height: 400px; width: 100%; background: url(/Theme/17112702/images/trade/help/servicemainto.png) #2299b4 50% 50% no-repeat; ">
    <div class="wrapper" style="height:100%;">
        <ul class="help3">
            <li>
                <div><img src="/Theme/17112702/images/trade/help/xun.png"></div>
                <h5>@T("在线咨询")</h5>
                <p>
                    @T("7x24小时贴心恭候")
                    <br>@T("专业客服为您解疑答惑")
                </p>
                <button onclick="openSDK()">@T("在线客服")</button>
            </li>
            <li>
                <div><img src="/Theme/17112702/images/trade/help/men.png"></div>
                <h5>@T("反馈留言")</h5>
                <p>
                    @T("常见问题")
                    <br>@T("网站操作指南")
                </p>
                <button onclick="window.open('/usercenter/Mail/write')">@T("反馈信息")</button>
            </li>
            <li>
                <div>
                    <span style="background-color: #fff;display: inline-block;padding:4px 4px 0 4px;margin-top:40px;"><img height="120" src="@sysSet.ReserveStr1" alt=""></span>
                    <p style="margin-top:12px;font-size:14px;">@T("关注微信")</p>
                </div>
            </li>
        </ul>
    </div>
</div>
