                        if (result) {
                            location = '@(Url.Action("BatchSellUnLock"))?StrID=' + str;
                        }
                    });
                } else {
                    alert("对不起，请选择记录！");
                }
            })

            //批量卖出锁
            $("#toBuyLock").click(function () {
                var str = "";
                $("input[name='ckid']:checked").each(function () {
                    str += $(this).val() + ",";
                    //alert($(this).val());
                })
                var st = str.split(',');
                if (str.length > 0) {
                    bootbox.confirm('您确定要批量锁定这' + (st.length - 1) + '条记录的卖出功能麽？', function (result) {
                        if (result) {
                            location = '@(Url.Action("BatchBuyLock"))?StrID=' + str;
                        }
                    });
                } else {
                    alert("对不起，请选择记录！");
                }
            })
            //解除批量卖出锁
            $("#toBuyUnLock").click(function () {
                var str = "";
                $("input[name='ckid']:checked").each(function () {
                    str += $(this).val() + ",";
                    //alert($(this).val());
                })
                var st = str.split(',');
                if (str.length > 0) {
                    bootbox.confirm('您确定要批量解除这' + (st.length - 1) + '条记录的卖出锁定麽？', function (result) {
                        if (result) {
                            location = '@(Url.Action("BatchBuyUnLock"))?StrID=' + str;
                        }
                    });
                } else {
                    alert("对不起，请选择记录！");
                }
            })

        })


    </script>
}


