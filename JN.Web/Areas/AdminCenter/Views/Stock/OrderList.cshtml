@using PagedList.Mvc;
@using PagedList;
@model PagedList.PagedList<JN.Data.AdvertiseOrder>
@{
    string action = ViewContext.RouteData.Values["action"].ToString().ToLower();
    Layout = "~/Areas/AdminCenter/Views/Shared/_Layout.cshtml";
}
<!-- Content -->
<div id="content">
    <!-- Breadcrumb -->
    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")" class="glyphicons home"><i></i> 首页</a></li>
        <li class="divider"></li>
        <li>@ViewBag.Title</li>
    </ul>
    <div class="separator bottom"></div>
    <!-- // Breadcrumb END -->
    <div class="innerLR">
        <div class="tabbable">
            <ul class="nav nav-tabs" id="myTab">
                <li class="@((Request["Status"].ToInt()==0) ? "active" : "")">
                    <a href="@(Url.Action("OrderList"))">
                        所有订单
                    </a>
                </li>
                <li class="@(Request["Status"] == "1" ? "active" : "")">
                    <a href="@(Url.Action("OrderList", new { Status = 1 }))">
                        @(typeof(JN.Data.Enum.AdvertiseOrderStatus).GetEnumDesc(1))
                    </a>
                </li>
                <li class="@( Request["Status"] == "2" ? "active" : "")">
                    <a href="@(Url.Action("OrderList", new { Status = 2 }))">
                        @(typeof(JN.Data.Enum.AdvertiseOrderStatus).GetEnumDesc(2))
                    </a>
                </li>
                <li class="@( Request["Status"] == "3" ? "active" : "")">
                    <a href="@(Url.Action("OrderList", new { Status = 3 }))">
                        @(typeof(JN.Data.Enum.AdvertiseOrderStatus).GetEnumDesc(5))
                    </a>
                </li>
               
                <li class="@( Request["Status"] == "-1" ? "active" : "")">
                    <a href="@(Url.Action("OrderList", new { Status = -1 }))">
                        @(typeof(JN.Data.Enum.AdvertiseOrderStatus).GetEnumDesc(-1))
                    </a>
                </li>
                <li class="@( Request["Status"] == "-2" ? "active" : "")">
                    <a href="@(Url.Action("OrderList", new { Status = -2 }))">
                        @(typeof(JN.Data.Enum.AdvertiseOrderStatus).GetEnumDesc(-2))
                    </a>
                </li>
            </ul>

            <div class="filter-bar margin-bottom-none">
                <form method="get">

                    <!-- Filter -->
                    <div>
                        <select name="datefiled" style="width: 80px;">
                            <option value="CreateTime" @(Request["datefiled"] == "CreateTime" ? "selected" : "")>创建时间</option>
                        </select>
                    </div>
                    <div>
                        <label>从:</label>
                        <div class="input-append">
                            <input type="text" name="dateform" class="input-mini datepicker" value="@Request["dateform"]" style="width: 63px;" />
                            <span class="add-on glyphicons calendar"><i></i></span>
                        </div>
                    </div>
                    <!-- // Filter END -->
                    <!-- Filter -->
                    <div>
                        <label>到:</label>
                        <div class="input-append">
                            <input type="text" name="dateto" class="input-mini datepicker" value="@Request["dateto"]" style="width: 63px;" />
                            <span class="add-on glyphicons calendar"><i></i></span>
                        </div>
                    </div>
                    <!-- // Filter END -->
                    <!-- Filter -->
                    <div style="margin-left:10px">
                        <select name="numberfiled" style="width: 80px;">
                            <option value="ID" @(Request["numberfiled"] == "ID" ? "selected" : "")>ID</option>
                        </select>
                    </div>
                    <div>
                        <label>从:</label>
                        <div class="input-append">
                            <input type="text" name="numberform" class="input-mini" style="width: 30px;" value="@Request["numberform"]" />
                            <span class="add-on glyphicons euro"><i></i></span>
                        </div>
                    </div>
                    <!-- // Filter END -->
                    <!-- Filter -->
                    <div>
                        <label>到:</label>
                        <div class="input-append">
                            <input type="text" name="numberto" class="input-mini" style="width: 30px;" value="@Request["numberto"]" />
                            <span class="add-on glyphicons euro"><i></i></span>
                        </div>
                    </div>
                    <!-- // Filter END -->
                    <!-- Filter -->
                    <div style="margin-left:10px">
                        <select name="keyfiled" style="width: 80px;">
                            <option value="BuyUserName" @(Request["keyfiled"] == "BuyUserName" ? "selected" : "")>购买者</option>
                            <option value="SellUserName" @(Request["keyfiled"] == "SellUserName" ? "selected" : "")>出售者</option>
                            <option value="OrderID" @(Request["keyfiled"] == "OrderID" ? "selected" : "")>订单号</option>
                            <option value="AdOderNO" @(Request["keyfiled"] == "AdOderNO" ? "selected" : "")>来源单号</option>                       
                        </select>
                    </div>
                    <div>
                        <div class="input-append">
                            <input type="text" name="keyword" class="input-mini" style="width: 150px;" value="@Request["keyword"]" placeholder="请输入查询关键词" />
                            <span style="margin: 0;" class="btn-action single glyphicons circle_question_mark" data-toggle="tooltip" data-placement="top" data-original-title="使用模糊查询可在关键字前后加上“%”"><i></i></span>
                        </div>
                    </div>
                    <!-- // Filter END -->
                    <!-- Filter -->
                    <div>
                        <input type="hidden" name="isactivation" value="@Request["isactivation"]" />
                        <input type="hidden" name="IsAsc" value="0" />
                        <input type="hidden" name="OrderFiled" value="ID" />
                        <input type="hidden" name="IsExport" value="0" />
                        <input type="submit" onclick="$('input[name=\'IsExport\']').val(0)" value="查询" />
                        <input type="submit" onclick="$('input[name=\'IsExport\']').val(1)" value="导出" />
                    </div>
                    <div class="clearfix"></div>
                    <!-- // Filter END -->

                </form>
            </div>
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="center">
                        </th>
                        <th>订单号</th>
                        <th>来源单号</th>
                        <th>购买者</th>
                        <th>购买者手机号</th>
                        <th>购买者姓名</th>
                        <th>出售者</th>
                        <th>出售者手机号</th>
                        <th>出售者姓名</th>
                        <th>类型</th>
                        <th>交易币种</th>
                        <th>交易金额</th>
                        <th>交易数量</th>
                        <th>交易状态</th>
                        <th>
                            <i class="icon-time bigger-110 hidden-480"></i>
                         创建时间
                        </th>
                        <th>
                            <i class="icon-time bigger-110 hidden-480"></i>
                            完成时间
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                  @if (Model.Count > 0)
                  {
                      int i = 1;
                    foreach (var item in Model)
                    {       
                       var buyUser = MvcCore.Unity.Get<JN.Data.Service.IUserService>().Single(x => x.ID == item.BuyUID);
                        var sellUser = MvcCore.Unity.Get<JN.Data.Service.IUserService>().Single(x => x.ID == item.SellUID);
                            <tr>
                                <td class="center text-muted">
                                    @(i)
                                </td>
                                <td>
                                    @item.OrderID
                                </td>
                                <td>
                                    @item.AdOderNO
                                </td>
                                <td>
                                   @item.BuyUserName
                                </td>
                                <td>
                                   @(buyUser.CountryCode +" " + buyUser.Mobile)
                                </td>
                                <td>
                                    @buyUser.RealName
                                </td>
                                <td>
                                    @item.SellUserName
                                </td>

                                <td>
                                    @(sellUser.CountryCode + " " + sellUser.Mobile)
                                </td>                               
                                <td>
                                    @sellUser.RealName
                                </td>
                              
                               <td>
                                    @(item.Direction==0?"出售":"购买")
                                </td>
                                <td>
                                    @(item.CurName)
                                </td>
                                <td>
                                   @item.Amount
                                </td>
                                <td>
                                    @item.Quantity
                                    </td>
                                <td>
                                    @(typeof(JN.Data.Enum.AdvertiseOrderStatus).GetEnumDesc(item.Status))
                                    </td>                              
                                <td class="hidden-480">@item.CreateTime </td>
                                <td class="hidden-480">@item.ConfirmPayTime </td>
                                <td>
                                    @if (item.Status == (int)JN.Data.Enum.AdvertiseOrderStatus.PlaceOrder)
                                    {
                                        <a class="btn btnPay" data-id="@item.ID">标记为已付款</a>
                                    }
                                    else if (item.Status == (int)JN.Data.Enum.AdvertiseOrderStatus.PendingPayment || item.Status == (int)JN.Data.Enum.AdvertiseOrderStatus.TimeoutUnConfirmed)
                                    {
                                        <a  class="btn btnPayStage" data-id="@item.ID">标记为已收货</a>
                                    }

                                    @if (item.Status == (int)JN.Data.Enum.AdvertiseOrderStatus.PlaceOrder || item.Status == (int)JN.Data.Enum.AdvertiseOrderStatus.PendingPayment)
                                    {
                                        <a  class="btn second btnCancel" data-id="@item.ID">取消交易</a>
                                    }
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr><td colspan="12" align="center" style="color:#999; line-height:50px">很抱歉，没有任何记录。</td></tr>
                    }
                </tbody>
            </table>

            <!-- // Table END -->
            <!-- Options -->
            <div class="separator top form-inline small">

                <!-- With selected actions -->
                <div class="pull-left checkboxs_actions hide">
                    <label class="strong">With selected:</label>
                    <select class="selectpicker" data-style="btn-default btn-small">
                        <option>Action</option>
                        <option>Action</option>
                        <option>Action</option>
                    </select>
                </div>
                <!-- // With selected actions END -->
                <!-- Pagination -->
                @Html.PagedListPager((IPagedList)Model, page => Url.Action(ViewContext.RouteData.Values["action"].ToString(),
                       JN.Services.Tool.StringHelp.GetQueryString(HttpUtility.ParseQueryString(Request.Url.Query), page)), new PagedListRenderOptions() { ContainerDivClasses = new string[] { "pagination pagination-small pull-right" } })

                <div class="clearfix"></div>
                <!-- // Pagination END -->

            </div>
            <!-- // Options END -->

        </div>
    </div>
</div>
<!-- // Content END -->
@section scripts{
    <script type="text/javascript">
        $(function () {

        //确认付款操作
        $(".btnPay").click(function () {
           // var adorderid = $("#adorderid").val();
            var adorderid = $(this).attr("data-id");
            $.post("@Url.Action("Confirmpayment")", { id: adorderid }, function (data) {
                if (data.Status == 200) {
                    location.reload();
                } else {
                    alert(data.Message)
                }
            })
        })
        //确认收货操作
        $(".btnPayStage").click(function () {
            var adorderid = $(this).attr("data-id");
            $.post("@Url.Action("ConfirmReceipt")", { id: adorderid }, function (data) {
                if (data.Status == 200) {
                    location.reload();
                } else {
                    alert(data.Message)
                }
            })
        })

        //取消操作
        $(".btnCancel").click(function () {
            var adorderid = $(this).attr("data-id");
            $.post("@Url.Action("ConfirmCancel")", { id: adorderid }, function (data) {
                if (data.Status == 200) {
                    location.reload();
                } else {
                    alert(data.Message)
                }
            })
        })

        });

    </script>
}


