@model List<JN.Data.TimingPlan>
@{
    string action = ViewContext.RouteData.Values["action"].ToString().ToLower();
    Layout = "~/Areas/AdminCenter/Views/Shared/_Layout.cshtml";
}
<!-- Content -->
<div id="content">
    <!-- Breadcrumb -->
    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")" class="glyphicons home"><i></i> 首页</a></li>
        <li class="divider"></li>
        <li>@ViewBag.Title</li>
    </ul>
    <div class="separator bottom"></div>
    <!-- // Breadcrumb END -->
    <div class="innerLR">
        <div class="tabbable">
            <ul class="nav nav-tabs" id="myTab">
                <li class="@(action == "timingplan" ? "active" : "")">
                    <a href="@Url.Action("timingpan")">
                        定时作业计划
                    </a>
                </li>
                <li class="@(action == "timingplanlog" ? "active" : "")">
                    <a href="@Url.Action("timingplanlog", "Log")">
                        作业计划日志
                    </a>
                </li>
                <li><a href="#">服务器时间：@DateTime.Now</a></li>
            </ul>
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="center">
                        </th>
                        <th>计划作业周期</th>
                        <th><i class="icon-time bigger-110 hidden-480"></i>计划作业时间</th>
                        <th>执行过程</th>
                        <th>状态</th>
                        <th>描述</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td class="center text-muted">
                                    @(i + 1)
                                </td>
                                <td>
                                    @(Model[i].CycleType == 1 ? "每周" : (Model[i].CycleType == 2 ? "每月" : (Model[i].CycleType == 3 ? "每小时" : "每天"))) @*@(Model[i].CycleValue)*@
                                </td>
                                <td>
                                    @(Model[i].PlanTime)
                                </td>
                                <td>
                                    @Model[i].PlanName
                                </td>
                                <td>
                                    @if (Model[i].Status == 1)
                                    {
                                        <a href="@(Url.Action("SetPlanStatus"))/@Model[i].ID" class="btn-action glyphicons play btn-success" data-rel="tooltip" title="运行中">
                                            <i></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@(Url.Action("SetPlanStatus"))/@Model[i].ID" class="btn-action glyphicons pause btn-success" data-rel="tooltip" title="暂停">
                                            <i></i>
                                        </a>
                                    }
   
                                </td>
                                <td>
                                    @Model[i].Remark
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="#modal-form" class="btn-action glyphicons pencil btn-success" onclick="clearform();$('#ID').val(@Model[i].ID);" data-toggle="modal" data-rel="tooltip" title="编辑" data-placement="top">
                                            <i></i>
                                        </a>

                                        @*<a href="###" data-value="@Model[i].ID" class="btn-action glyphicons remove_2 btn-danger qstx" data-rel="tooltip" title="删除" data-placement="top">
                                            <i></i>
                                        </a>*@</div>
</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

            <br />
            @*<a href="#modal-form" onclick="clearform();$('#theid').val(0)" data-toggle="modal" class="btn btn-primary">添加新计划</a>*@

        </div>
    </div>
<!-- PAGE CONTENT ENDS -->
<div id="modal-form" class="modal hide" tabindex="-1">
  @using (Ajax.BeginForm("TimingPlan", new { }, new AjaxOptions() { HttpMethod = "Post", OnSuccess = "afterPost" }, new { id = "saveForm", @class = "form-horizontal" }))
  {
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="blue bigger">修改/添加计划作业</h4>
                </div>
                <div class="modal-body overflow-visible">

                    <div class="control-group">
                        <label class="control-label col-xs-12 col-sm-3 no-padding-right">作业周期:</label>

                        <div class="col-xs-12 col-sm-6">
                            <div class="clearfix">
                                <select name="CycleType" class="form-control" style="width:100px">
                                    <option value="3">每小时</option>
                                    <option value="0">每天</option>
                                    <option value="1">每周</option>
                                    <option value="2">每月</option>
                                </select>
                                <select name="CycleValue" class="form-control" style="width:70px; display:none">
                                    @for (int i = 1; i <= 31; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                                <input type="hidden" name="ID" id="ID" />
                            </div>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label col-xs-12 col-sm-3 no-padding-right">作业时间:</label>

                        <div class="col-xs-12 col-sm-6">
                            <div class="clearfix">
                                <div class="input-group bootstrap-timepicker">
                                    <input name="PlanTime" type="text" style="width:100px" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label col-xs-12 col-sm-3 no-padding-right">执行任务:</label>
                        <div class="col-xs-12 col-sm-6">
                            <div class="clearfix">
                                <select name="PlanName" class="form-control" disabled>
                                    <option value="plan1">每日释放</option>
                                    <option value="plan3">VIP流通奖励</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label col-xs-12 col-sm-3 no-padding-right">描述:</label>

                        <div class="col-xs-12 col-sm-6">
                            <div class="clearfix">
                                <textarea name="Remark" class="form-control" readonly="readonly"></textarea>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button class="btn btn-sm" data-dismiss="modal">
                        <i class="icon-remove"></i>
                        取消
                    </button>

                    <button type="submit" class="btn btn-sm btn-primary">
                        <i class="icon-ok"></i>
                        保存
                    </button>
                </div>
            </div>
        </div>
  }
</div>
    </div><!-- /.page-content -->
@section scripts{
<script src="~/Plugin/Jquery/jquery.unobtrusive-ajax.min.js"></script>

    <script type="text/javascript">
        jQuery(function ($) {
            //$('#PlanTime').timepicker({
            //    minuteStep: 1,
            //    showSeconds: true,
            //    showMeridian: false
            //}).next().on("click", function () {
            //    $(this).prev().focus();
            //});
            $(".qstx").on("click", function () {
                var id = $(this).attr("data-value");
                bootbox.confirm('您确定要删除该信息吗?', function (result) {
                    if (result) {
                        location = '@(Url.Action("DeletePlan"))/' + id;
                    }
                });
            });
        });
        $('#modal-form').on('shown.bs.modal', function () {
            $.ajax({
                url: "@(Url.Action("ModifyPlan"))",
                data: 'id=' + $("#ID").val(),
                type: 'GET',
                dataType: 'json',
                success: function (response) {
                    if (response.result == "ok") {
                        $("select[name='CycleType']").val(response.data.CycleType);
                        $("select[name='CycleValue']").val(response.data.CycleValue);
                        $("input[name='PlanTime']").val(response.data.PlanTime);
                        $("select[name='PlanName']").val(response.data.PlanName);
                        $("textarea[name='Remark']").val(response.data.Remark);
                    }
                    else
                        alert(response.refMsg);
                },
                error: function (response) {
                    //console.log(response);
                }
            });
        });
        function clearform() {
            $("input[name='ID']").val("0");
            $("select[name='CycleType']").val("");
            $("select[name='CycleValue']").val("");
            $("input[name='PlanTime']").val("");
            $("select[name='PlanName']").val("");
            $("textarea[name='Remark']").val("");
        }

        function afterPost(data) {
            if (data.result == "ok") {
                //alert("保存成功，即将为您跳转页面!");
                window.location.reload();
            } else {
                alert(data.refMsg);
            }
        }
    </script>
}