@using PagedList.Mvc;
@using PagedList;
@model PagedList.PagedList<JN.Data.Matching>
@{
    string action = ViewContext.RouteData.Values["action"].ToString().ToLower();
    Layout = "~/Areas/AdminCenter/Views/Shared/_Layout.cshtml";
}
<div id="content">
    <!-- Breadcrumb -->
    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")" class="glyphicons home"><i></i> 首页</a></li>
        <li class="divider"></li>
        <li>@ViewBag.Title</li>
    </ul>
    <div class="separator bottom"></div>
    <!-- // Breadcrumb END -->
    <div class="innerLR">
        <div class="tabbable">
            <ul class="nav nav-tabs" id="myTab">
                <li class="@(action == "supplyhelp" ? "active" : "")">
                    <a href="@Url.Action("SupplyHelp")">
                        提供帮助
                    </a>
                </li>
                <li class="@(action == "accepthelp" ? "active" : "")">
                    <a href="@Url.Action("AcceptHelp")">
                        接受帮助
                    </a>
                </li>
                <li class="@((Request.Url.ToString().ToLower().Contains(("/market/matchdlist?ac=all").ToLower())) ? "active" : "")">
                    <a href="@Url.Action("MatchdList")?ac=all">
                        已匹配数据
                    </a>
                </li>
                <li class="@((Request.Url.ToString().ToLower().Contains(("/market/matchdlist?ac=overduepayment").ToLower())) ? "active" : "")">
                    <a href="@Url.Action("MatchdList")?ac=overduepayment">
                        超期未付款订单
                    </a>
                </li>
                <li class="@((Request.Url.ToString().ToLower().Contains(("/market/matchdlist?ac=overdueverified").ToLower())) ? "active" : "")">
                    <a href="@Url.Action("MatchdList")?ac=overdueverified">
                        超期未验证付款单
                    </a>
                </li>
                <li class="@((Request.Url.ToString().ToLower().Contains(("/market/matchdlist?ac=falseorders").ToLower())) ? "active" : "")">
                    <a href="@Url.Action("MatchdList")?ac=falseorders">
                        虚假订单
                    </a>
                </li>
                <li class="@((Request.Url.ToString().ToLower().Contains(("/market/matchdlist?ac=cancel").ToLower())) ? "active" : "")">
                    <a href="@Url.Action("MatchdList")?ac=cancel">
                        已取消订单
                    </a>
                </li>
            </ul>
            <div class="filter-bar margin-bottom-none">
                <form method="get">

                    <!-- Filter -->
                    <div>
                        <select name="datefiled" style="width: 80px;">
                            <option value="CreateTime" @(Request["datefiled"] == "CreateTime" ? "selected" : "")>匹配时间</option>
                            <option value="PayEndTime" @(Request["datefiled"] == "PayEndTime" ? "selected" : "")>付款截止时间</option>
                            <option value="PayTime" @(Request["datefiled"] == "PayTime" ? "selected" : "")>付款时间</option>
                            <option value="VerifiedEndTime" @(Request["datefiled"] == "VerifiedEndTime" ? "selected" : "")>验证截止时间</option>
                            <option value="CancelTime" @(Request["datefiled"] == "CancelTime" ? "selected" : "")>取消时间</option>
                        </select>
                    </div>
                    <div>
                        <label>从:</label>
                        <div class="input-append">
                            <input type="text" name="dateform" class="input-mini datepicker" value="@Request["dateform"]" style="width: 63px;" />
                            <span class="add-on glyphicons calendar"><i></i></span>
                        </div>
                    </div>
                    <!-- // Filter END -->
                    <!-- Filter -->
                    <div>
                        <label>到:</label>
                        <div class="input-append">
                            <input type="text" name="dateto" class="input-mini datepicker" value="@Request["dateto"]" style="width: 63px;" />
                            <span class="add-on glyphicons calendar"><i></i></span>
                        </div>
                    </div>
                    <!-- // Filter END -->
                    <!-- Filter -->
                    <div style="margin-left:10px">
                        <select name="numberfiled" style="width: 80px;">
                            <option value="MatchAmount" @(Request["numberfiled"] == "MatchAmount" ? "selected" : "")>金额</option>
                        </select>
                    </div>
                    <div>
                        <label>从:</label>
                        <div class="input-append">
                            <input type="text" name="numberform" class="input-mini" style="width: 30px;" value="@Request["numberform"]" />
                            <span class="add-on glyphicons euro"><i></i></span>
                        </div>
                    </div>
                    <!-- // Filter END -->
                    <!-- Filter -->
                    <div>
                        <label>到:</label>
                        <div class="input-append">
                            <input type="text" name="numberto" class="input-mini" style="width: 30px;" value="@Request["numberto"]" />
                            <span class="add-on glyphicons euro"><i></i></span>
                        </div>
                    </div>
                    <!-- // Filter END -->
                    <!-- Filter -->
                    <div style="margin-left:10px">
                        <select name="keyfiled" style="width: 80px;">
                            <option value="MatchingNo" @(Request["keyfiled"] == "MatchingNo" ? "selected" : "")>匹配单号</option>
                            <option value="SupplyNo" @(Request["keyfiled"] == "SupplyNo" ? "selected" : "")>供单单号</option>
                            <option value="AcceptNo" @(Request["keyfiled"] == "AcceptNo" ? "selected" : "")>受单单号</option>
                            <option value="SupplyUserName" @(Request["keyfiled"] == "SupplyUserName" ? "selected" : "")>供单会员</option>
                            <option value="AcceptUserName" @(Request["keyfiled"] == "AcceptUserName" ? "selected" : "")>受单会员</option>
                        </select>
                    </div>
                    <div>
                        <div class="input-append">
                            <input type="text" name="keyword" class="input-mini" style="width: 150px;" value="@Request["keyword"]" placeholder="请输入查询关键词" />
                            <span style="margin: 0;" class="btn-action single glyphicons circle_question_mark" data-toggle="tooltip" data-placement="top" data-original-title="使用模糊查询可在关键字前后加上“%”"><i></i></span>
                        </div>
                    </div>
                    <!-- // Filter END -->
                    <!-- Filter -->
                    <div>
                        <input type="hidden" name="IsAsc" value="0" />
                        <input type="hidden" name="OrderFiled" value="ID" />
                        <input type="submit" value="查询" />
                        <input type="button" onclick="location.href='@(Request.Url +"&isExport=1")'" value="导出" />

                    </div>
                    <div class="clearfix"></div>
                    <!-- // Filter END -->

                </form>

            </div>

            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="center">
                        </th>
                        <th>匹配单号</th>
                        @*<th>地区</th>*@
                        <th>供单单号</th>
                        <th>供单会员</th>
                        <th>受单单号</th>
                        <th>受单会员</th>
                        <th>匹配金额</th>
                        <th>状态</th>
                        <th>截图</th>
                        <th>
                            <i class="icon-time bigger-110 hidden-480"></i>
                            匹配时间
                        </th>
                        <th>
                            <i class="icon-time bigger-110 hidden-480"></i>
                            到期时间
                        </th>
                        <th>
                            <i class="icon-time bigger-110 hidden-480"></i>
                            付款时间
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        decimal totalmoney = 0;
                        for (int i = 0; i < Model.Count; i++)
                        {

                            <tr class="@(Model[i].Status == -1 ? "cancel" : "")">
                                <td class="center text-muted">
                                    @(i + 1)
                                </td>
                                <td>
                                    @Model[i].MatchingNo
                                    @if (!string.IsNullOrEmpty(Model[i].Remark))
                                    {
                                        <a data-value="@Model[i].ID" class="btn-action single glyphicons circle_exclamation_mark" style="width:auto" data-rel="tooltip" title="@Model[i].Remark">
                                            <i></i>
                                        </a>
                                    }
                                    @if (Model[i].Status < 0)
                                    {
                                        <a data-value="@Model[i].ID" class="btn-action single glyphicons circle_exclamation_mark" style="width:auto" data-rel="tooltip" title="@Model[i].CanceReason　在@(Model[i].CancelTime)">
                                            <i></i>
                                        </a>
                                    }
                                </td>
                                @*<td>
                            @Model[i].Province @Model[i].City
                        </td>*@
                                <td>
                                    <a href="@Url.Action("SupplyHelp")?active=0&kf=supplyno&kw=%3D&kv=@Model[i].SupplyNo">@Model[i].SupplyNo</a>
                                </td>
                                <td>
                                    @Model[i].SupplyUserName
                                </td>
                                <td>
                                    <a href="@Url.Action("AcceptHelp")?active=0&kf=acceptno&kw=%3D&kv=@Model[i].AcceptNo">@Model[i].AcceptNo</a>
                                </td>
                                <td>
                                    @Model[i].AcceptUserName
                                </td>
                                <td>
                                    @Model[i].MatchAmount
                                </td>
                                <td>
                                    @typeof(JN.Data.Enum.MatchingStatus).GetEnumDesc(Model[i].Status)
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(Model[i].ProofImageUrl))
                                    {
                                    <a href="@Model[i].ProofImageUrl" target="_blank" class="no-js">
                                        <span class="btn-action glyphicons btn-info picture">
                                            <i></i>
                                        </span>
                                    </a>
                                    }
                                </td>
                                <td class="hidden-480">@Model[i].CreateTime</td>
                                <td class="hidden-480">@Model[i].PayEndTime</td>
                                <td class="hidden-480">@Model[i].PayTime</td>
                                <td>
                                    @if (Model[i].Status < (int)JN.Data.Enum.MatchingStatus.Paid && Model[i].Status > 0)
                                    {
                                        <a data-value="@Model[i].ID" class="btn-action glyphicons delete btn-info qxdj" data-rel="tooltip" title="取消匹配订单">
                                            <i></i>
                                        </a>
                                    }
                                    @if (Model[i].Status == (int)JN.Data.Enum.MatchingStatus.Paid)
                                    {
                                        <a data-value="@Model[i].ID" class="btn-action glyphicons ok btn-info finshpay" data-rel="tooltip" title="成交">
                                            <i></i>
                                        </a>
                                    }
                                    @if (Model[i].Status == (int)JN.Data.Enum.MatchingStatus.Falsehood)
                                    {
                                        <a data-value="@Model[i].ID" class="btn-action glyphicons pushpin btn-info punish" data-rel="tooltip" title="冻结提供订单方帐号并取消匹配">
                                            <i></i>
                                        </a>
                                        <a data-value="@Model[i].ID" class="btn-action glyphicons ok btn-info finshpay" data-rel="tooltip" title="成交">
                                            <i></i>
                                        </a>
                                    }
                                    @if (Model[i].Status == (int)JN.Data.Enum.MatchingStatus.UnPaid)
                                    {
                                        <a data-value="@Model[i].ID" class="btn-action glyphicons stopwatch btn-info delaypay" data-rel="tooltip" title="追加延时付款时间">
                                            <i></i>
                                        </a>
                                    }



                                </td>
                            </tr>
                            totalmoney += Model[i].MatchAmount;
                        }
                        <tr>
                            <td class="center text-muted"></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            @*<td>
                    </td>*@
                            <td></td>
                            <td>
                                小计：
                            </td>
                            <td>
                                @totalmoney.ToString("F2")
                            </td>
                            <td></td>
                            <td></td>
                            <td class="hidden-480"></td>
                            <td class="hidden-480"></td>
                            <td class="hidden-480"></td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="separator top form-inline small">
                <!-- Pagination -->
                @Html.PagedListPager((IPagedList)Model, page => Url.Action(ViewContext.RouteData.Values["action"].ToString(),
                       JN.Services.Tool.StringHelp.GetQueryString(HttpUtility.ParseQueryString(Request.Url.Query), page)), new PagedListRenderOptions() { ContainerDivClasses = new string[] { "pagination pagination-small pull-right" } })


                <div class="clearfix"></div>
                <!-- // Pagination END -->

            </div><!-- /.table-responsive -->
        </div><!-- /span -->
    </div><!-- /row -->
</div><!-- /.page-content -->

<!-- PAGE CONTENT ENDS -->
<div id="modal-form" class="modal hide" tabindex="-1" >
    <form class="form-horizontal" id="validation-form" method="post" >
        <div class="modal-dialog">
            <div class="modal-content" style="width:700px;">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="blue bigger">详细信息</h4>
                </div>
                <div class="modal-body overflow-visible">
 
                </div>

                <div class="modal-footer">
                    <button class="btn btn-sm btn-primary" data-dismiss="modal">
                        <i class="icon-remove"></i>
                        取消
                    </button>

                 
                </div>
            </div>
        </div>
    </form>
</div>
@section scripts{
<script type="text/javascript">
    jQuery(function ($) {
        $('[data-rel=tooltip]').tooltip({ container: 'body' });
        $(".punish").on("click", function () {
            var id = $(this).attr("data-value");
            bootbox.confirm('您确定要惩罚处理该记录吗?选择是将冻结提供订单方帐号并取消匹配', function (result) {
                if (result) {
                    location = '@(Url.Action("Punish"))?matchid=' + id;
                }
            });
        });

        $(".finshpay").on("click", function () {
            var id = $(this).attr("data-value");
            bootbox.confirm('您确定要确认成交状态么？', function (result) {
                if (result) {
                    location = '@(Url.Action("FinshPay"))?matchid=' + id;
                }
            });
        });
        $(".qxdj").on("click", function () {
            var id = $(this).attr("data-value");
            bootbox.confirm('您确定要取消该匹配订单吗？', function (result) {
                if (result) {
                    location = '@(Url.Action("Cancel"))?matchid=' + id;
                }
            });
        });
        $(".delaypay").on("click", function () {
            var id = $(this).attr("data-value");
            bootbox.prompt('请输入追加延时时间：（单位是小时，从截止付款时间算起）', function (result) {
                if (result)
                    $.post('@(Url.Action("DelayPay"))', { matchid: id, hour: result }, function (data) {
                        if (data == 'ok') location.reload();
                    });
            });
        });

    });
</script>
}