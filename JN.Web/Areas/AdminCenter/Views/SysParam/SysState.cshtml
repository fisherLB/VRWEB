@{
    Layout = "~/Areas/AdminCenter/Views/Shared/_Layout.cshtml";

    decimal totaluser = 0;
    decimal totalhq = 0;
    decimal totaldq = 0;
    decimal totalbuy = 0;
    decimal totalsell = 0;
    decimal totalfh = 0;
    decimal totalxj = 0;

    var entrusts = MvcCore.Unity.Get<JN.Data.Service.IStockEntrustsTradeService>().List(x => (x.Status == (int)JN.Data.Enum.TTCStatus.Entrusts || x.Status == (int)JN.Data.Enum.TTCStatus.PartOfTheDeal));

    totalbuy = entrusts.Where(x => x.Direction == 0).Count() > 0 ? entrusts.Where(x => x.Direction == 0).Sum(x => (x.Quantity - x.HaveTurnover)) : 0;
    totalsell = entrusts.Where(x => x.Direction == 1).Count() > 0 ? entrusts.Where(x => x.Direction == 1).Sum(x => (x.Quantity - x.HaveTurnover)) : 0;

    var userlist = MvcCore.Unity.Get<JN.Data.Service.IUserService>().List();
    totaluser = userlist.Count();

    totalxj = userlist.Count() > 0 ? userlist.Sum(x => x.Wallet2002) : 0;

    totalhq = userlist.Count() > 0 ? userlist.Sum(x => x.Wallet2003) : 0;
    var dqlist = MvcCore.Unity.Get<JN.Data.Service.ITimeDepositService>().List(x => x.Status < 2);
    totaldq = dqlist.Count() > 0 ? dqlist.Sum(x => x.DepositAmount) : 0;

    totalfh = userlist.Count() > 0 ? userlist.Sum((x => x.Addup1103 ?? 0 + x.Addup1104 ?? 0)) : 0;
}
<div id="content">
    <!-- Breadcrumb -->
    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")" class="glyphicons home"><i></i> 首页</a></li>
        <li class="divider"></li>
        <li>@ViewBag.Title</li>
    </ul>
    <div class="separator bottom"></div>
    <!-- // Breadcrumb END -->
    <div class="innerLR">
        <div class="tabbable">
            <!-- page specific plugin styles -->
            <div class="row">
                <div class="col-xs-4">
                    <!-- PAGE CONTENT BEGINS -->
                    <table class="table table-bordered table-hover no-margin-bottom">
                        <tr>
                            <td width="20%">当前股票数量：</td>
                            <td>@(totaldq + totalhq + totalsell)</td>
                        </tr>
                        <tr>
                            <td>定期数量：</td>
                            <td>@totaldq</td>
                        </tr>
                        <tr>
                            <td>活期数量：</td>
                            <td>@totalhq</td>
                        </tr>
                        <tr>
                            <td>委托卖单数量：</td>
                            <td>@totalsell</td>
                        </tr>
                        <tr>
                            <td>现金数量：</td>
                            <td>@totalxj</td>
                        </tr>
                        <tr>
                            <td>分红总和：</td>
                            <td>@totalfh</td>
                        </tr>
                        <tr>
                            <td>委托买单数量：</td>
                            <td>@totalbuy</td>
                        </tr>
                        <tr>
                            <td>用户数量：</td>
                            <td>@totaluser</td>
                        </tr>
                    </table>

                    <!-- PAGE CONTENT ENDS -->
                </div><!-- /.col -->
            </div><!-- /.row -->
            <!-- page specific plugin scripts -->
            </div></div></div>
            @section scripts{}
