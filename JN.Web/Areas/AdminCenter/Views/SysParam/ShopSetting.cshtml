<script src="~/Plugin/Jquery/jquery.unobtrusive-ajax.min.js"></script>
<script>
        //上传主图
        KindEditor.ready(function (K) {
            var editor = K.editor({
                uploadJson: '@Url.Action("UpMainPic")?dir=Logo&size=200',
                allowFileManager: true
            });
            K('#btnUpManiPic').click(function () {
                editor.loadPlugin('image', function () {
                    editor.plugin.imageDialog({
                        showRemote: false,
                        imageUrl: K('#UrlMainPic').val(),
                        clickFn: function (url, title, width, height, border, align) {
                            K('#MainPic').attr("src", url);
                            K('#hidMainimgSrc').val(url);
                            editor.hideDialog();
                        }
                    });
                });
            });
        });
        //显示主图
        function ShowPic(data) {
            var url = data.SaveName;
            $("#GalleryItem").attr("src", url);
            $("#imgSrc").val(url);
        }
        //提交后返回结果
        function AfterAdd(result) {
            if (result == "ok") {
                alert("设置成功！");
            }
            else {
                alert(result);
            }
        }

    </script>
