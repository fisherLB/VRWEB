@using PagedList.Mvc;
@using PagedList;
@model PagedList.IPagedList<JN.Data.Shop_Order>


@{
    ViewBag.Title = "TradingRecords";
    Layout = "~/Areas/AdminCenter/Views/Shared/_Layout.cshtml";
    string action = ViewContext.RouteData.Values["action"].ToString().ToLower();
}

<!-- Content -->
<div id="content">
    <!-- Breadcrumb -->
    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")" class="glyphicons home"><i></i> 首页</a></li>
        <li class="divider"></li>
        <li>@ViewBag.Title</li>
    </ul>
    <div class="separator bottom"></div>
    <!-- // Breadcrumb END -->
    <div class="innerLR">
        <div class="tabbable">
            <ul class="nav nav-tabs" id="myTab">
                <li class="@((action == "tradingrecords" && String.IsNullOrEmpty(Request["Status"])) ? "active" : "")">
                    <a href="@(Url.Action("tradingrecords"))">
                        所有订单
                    </a>
                </li>

                <li class="@(action == "tradingrecords" && Request["Status"] == "1" ? "active" : "")">

                    <a href="@(Url.Action("tradingrecords", new { Status = 1 }))">
                        待发货订单
                    </a>
                </li>
                <li class="@(action == "tradingrecords" && Request["Status"] == "3" ? "active" : "")">

                    <a href="@(Url.Action("tradingrecords", new { Status = 3 }))">
                        已发货订单
                    </a>
                </li>
                <li class="@(action == "tradingrecords" && Request["Status"] == "4" ? "active" : "")">

                    <a href="@(Url.Action("tradingrecords", new { Status = 4 }))">
                        已完成订单
                    </a>
                </li>
               
                <li class="@(action == "tradingrecords" && Request["Status"] == "-2" ? "active" : "")">

                    <a href="@(Url.Action("tradingrecords", new { Status = -2 }))">
                        投诉订单
                    </a>
                </li>
                <li class="@(action == "tradingrecords" && Request["Status"] == "-1" ? "active" : "")">

                    <a href="@(Url.Action("tradingrecords", new { Status = -1 }))">
                        已取消订单
                    </a>
                </li>
            </ul>

            <div class="filter-bar margin-bottom-none">
                <form method="get">

                    <!-- Filter -->
                    <div>
                        <select name="datefiled" style="width: 80px;">
                            <option value="CreateTime" @(Request["datefiled"] == "CreateTime" ? "selected" : "")>下单时间</option>
                            <option value="ActivationTime" @(Request["datefiled"] == "DealTime" ? "selected" : "")>付款时间</option>
                        </select>
                    </div>
                    <div>
                        <label>从:</label>
                        <div class="input-append">
                            <input type="text" name="dateform" class="input-mini datepicker" value="@Request["dateform"]" style="width: 63px;" />
                            <span class="add-on glyphicons calendar"><i></i></span>
                        </div>
                    </div>
                    <!-- // Filter END -->
                    <!-- Filter -->
                    <div>
                        <label>到:</label>
                        <div class="input-append">
                            <input type="text" name="dateto" class="input-mini datepicker" value="@Request["dateto"]" style="width: 63px;" />
                            <span class="add-on glyphicons calendar"><i></i></span>
                        </div>
                    </div>
                    <!-- // Filter END -->
                    <!-- Filter -->
                    <div style="margin-left:10px">
                        <select name="numberfiled" style="width: 80px;">
                            <option value="ID" @(Request["numberfiled"] == "ID" ? "selected" : "")>ID</option>
                        </select>
                    </div>
                    <div>
                        <label>从:</label>
                        <div class="input-append">
                            <input type="text" name="numberform" class="input-mini" style="width: 30px;" value="@Request["numberform"]" />
                            <span class="add-on glyphicons euro"><i></i></span>
                        </div>
                    </div>
                    <!-- // Filter END -->
                    <!-- Filter -->
                    <div>
                        <label>到:</label>
                        <div class="input-append">
                            <input type="text" name="numberto" class="input-mini" style="width: 30px;" value="@Request["numberto"]" />
                            <span class="add-on glyphicons euro"><i></i></span>
                        </div>
                    </div>
                    <!-- // Filter END -->
                    <!-- Filter -->
                    <div style="margin-left:10px">
                        <select name="keyfiled" style="width: 80px;">
                            <option value="OrderNumber" @(Request["keyfiled"] == "OrderNumber" ? "selected" : "")>订单号</option>                            
                                                        @*<option value="ShopName" @(Request["keyfiled"] == "ShopName" ? "selected" : "")>店铺名</option>
                                   <option value="Mobile" @(Request["keyfiled"] == "Mobile" ? "selected" : "")>商品名</option>
        <option value="AliPay" @(Request["keyfiled"] == "AliPay" ? "selected" : "")>支付宝</option>
        <option value="BankCard" @(Request["keyfiled"] == "BankCard" ? "selected" : "")>银行卡</option>
        <option value="Email" @(Request["keyfiled"] == "Email" ? "selected" : "")>邮箱</option>
        <option value="RefereeUser" @(Request["keyfiled"] == "RefereeUser" ? "selected" : "")>推荐人</option>
        <option value="ParentUser" @(Request["keyfiled"] == "ParentUser" ? "selected" : "")>安置人</option>
        <option value="AgentUser" @(Request["keyfiled"] == "AgentUser" ? "selected" : "")>代理商</op*@tion>
                        </select>
                    </div>
                    <div>
                        <div class="input-append">
                            <input type="text" name="keyword" class="input-mini" style="width: 150px;" value="@Request["keyword"]" placeholder="请输入查询关键词" />
                            <span style="margin: 0;" class="btn-action single glyphicons circle_question_mark" data-toggle="tooltip" data-placement="top" data-original-title="使用模糊查询可在关键字前后加上“%”"><i></i></span>
                        </div>
                    </div>
                    <!-- // Filter END -->
                    <!-- Filter -->
                    <div>
                        <input type="hidden" name="isactivation" value="@Request["isactivation"]" />
                        <input type="hidden" name="IsAsc" value="0" />
                        <input type="hidden" name="OrderFiled" value="ID" />
                        <input type="hidden" name="IsExport" value="0" />
                        <input type="submit" onclick="$('input[name=\'IsExport\']').val(0)" value="查询" />
                        <input type="submit" onclick="$('input[name=\'IsExport\']').val(1)" value="导出" />

                    </div>
                    <div class="clearfix"></div>
                    <!-- // Filter END -->

                </form>
            </div>
            <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                <tbody>
                    @{if (Model.Count > 0)
                        {
                            for (int i = 0; i < Model.Count; i++)
                            {
                                //string orderNumber = Model[i].OrderNumber;
                                //List<JN.Data.Shop_Order_Details> detailsModelList = MvcCore.Unity.Get<JN.Data.Service.IShop_Order_DetailsService>().List(x => x.OrderNumber == orderNumber).ToList();

                                //for (int j = 0; j < detailsModelList.Count; j++)
                                //{
                                //    JN.Data.Shop_Product proModel = MvcCore.Unity.Get<JN.Data.Service.Shop_ProductService>().Single((int)detailsModelList[j].GoodsId);

                                <tr>
                                    <td class="center text-muted">
                                        @(i + 1)
                                    </td>
                                    <td>
                                        <h4>订单编号：@Model[i].OrderNumber <span style="float:right; color:#f00">订单总额：@Model[i].RealMoney</span></h4>
                                        <p>
                                            @*店铺名称：@Model[i].ShopName (卖家：@JN.BLL.shopinfos.GetModel(Model[i].ShopID).UserName)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;*@
                                            订单状态：@typeof(JN.Data.Enum.ShopOrderStatus).GetEnumDesc(Model[i].Status)
                                            @if (Model[i].Status == (int)JN.Data.Enum.ShopOrderStatus.Transaction)
                                            {
                                                <span>(@Model[i].Remark)</span>
                                            }
                                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                            购买时间：@Model[i].CreateTime.ToString("yyyy-MM-dd HH:mm:ss")
                                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                            买家：@Model[i].Buyer
                                        </p>
                                        @{
                                            string ordernumber = Model[i].OrderNumber;
                                            var lstPur = MvcCore.Unity.Get<JN.Data.Service.IShop_Order_DetailsService>().List(a => a.OrderNumber.Equals(ordernumber)).ToList();
                                            if (lstPur.Count > 0)
                                            {

                                                <table class="table table-striped table-bordered table-hover no-margin-bottom">
                                                    <thead>
                                                        <tr>

                                                            <th>商品名称</th>
                                                            <th>购买数量</th>
                                                            <th>商品规格</th>                                                           
                                                            <th>商品单价</th>
                                                            <th>数量</th>
                                                            <th>小计</th>
                                                            <th></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>

                                                        @for (int j = 0; j < lstPur.Count; j++)
                                                        {
                                                            JN.Data.Shop_Product proModel = MvcCore.Unity.Get<JN.Data.Service.Shop_ProductService>().Single((int)lstPur[j].GoodsId);
                                                            <tr>

                                                                <td>
                                                                    @proModel.ProductName
                                                                </td>
                                                                <td>
                                                                    @lstPur[j].ByCount
                                                                </td>
                                                                <td>
                                                                    @{ 
                                                                        var Specifications = MvcCore.Unity.Get<JN.Data.Service.IShop_SPECService>().Single(x => x.PID == proModel.Id);
                                                                        if (Specifications == null)
                                                                        {
                                                                            Specifications = new JN.Data.Shop_SPEC();
                                                                        }
                                                                    }
                                                                    @Specifications.Value
                                                                </td>
                                                                <td class="hidden-480">
                                                                    @lstPur[j].OneFee.ToString("F2")
                                                                </td>
                                                                <td>
                                                                    @lstPur[j].ByCount
                                                                </td>                                                               
                                                                <td class="hidden-480">@lstPur[j].TotalFee.ToString("F2")</td>
                                                                <td></td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>

                                            }
                                        }
                                        <p style="margin-top:10px">
                                            收件人：@Model[i].Addressee    &nbsp;&nbsp;&nbsp;联系电话： @Model[i].Phone&nbsp;&nbsp;&nbsp;   收货地址： @Model[i].Address 
                                            @if (Model[i].Status == (int)JN.Data.Enum.ShopOrderStatus.Sales)
                                            {
                                                <a href="###" data-value="@Model[i].ID" class="btn btn-sm btn-primary btn-purple qfh">
                                                    去发货
                                                </a>
                                            }
                                            @if (Model[i].Status == (int)JN.Data.Enum.ShopOrderStatus.Sales)
                                            {
                                                <a href="###" onclick="CancelOrder(@Model[i].ID)" class="btn btn-sm btn-purple">
                                                    取消订单
                                                </a>
                                            }
                                            @if (Model[i].Status == (int)JN.Data.Enum.ShopOrderStatus.Transaction)
                                            {
                                                <a href="@(Url.Action("doFinishOrder"))/@Model[i].ID" class="btn btn-sm btn-purple">
                                                    确认收货
                                                </a>
                                            }
                                        </p>
                                    </td>
                                </tr>
                                                        
                                                    }
                                                }
                                            }

                </tbody>

            </table>

            <!-- // Table END -->
            <!-- Options -->
            <div class="separator top form-inline small">

                <!-- With selected actions -->
                <div class="pull-left checkboxs_actions hide">
                    <label class="strong">With selected:</label>
                    <select class="selectpicker" data-style="btn-default btn-small">
                        <option>Action</option>
                        <option>Action</option>
                        <option>Action</option>
                    </select>
                </div>
                <!-- // With selected actions END -->
                <!-- Pagination -->
           

                <!-- Pagination -->
                @Html.PagedListPager((IPagedList)Model, page => Url.Action(ViewContext.RouteData.Values["action"].ToString(),
                       JN.Services.Tool.StringHelp.GetQueryString(HttpUtility.ParseQueryString(Request.Url.Query), page)), new PagedListRenderOptions() { ContainerDivClasses = new string[] { "pagination pagination-small pull-right" } })




                <div class="clearfix"></div>
                <!-- // Pagination END -->

            </div>
            <!-- // Options END -->

        </div>
    </div>
</div>
<!-- // Content END -->
@section scripts{
<script type="text/javascript">
    $(function () {
                    $(".qfh").on("click", function () {
                        var id = $(this).attr("data-value");
                        bootbox.prompt('请输入物流信息（格式为物流公司 + 物流单号）：', function (result) {
                            if (result)
                                $.post('@(Url.Action("doDeliver"))', { id: id, logistics: result }, function (data) {
                                    if (data == 'ok') location.reload();
                                });
                        });
                    });
    })

    function CancelOrder(vid)
    {
        if(confirm("你确定要取消这条订单么？"))
        {
            location.href = "@(Url.Action("CancelShopOrder"))/"+vid;
        }
    }

</script>

}
