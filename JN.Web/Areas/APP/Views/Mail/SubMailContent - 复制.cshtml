@model JN.Data.Message
@{
    JN.Data.User Umodel = null;
    if (JN.Services.UserLoginHelper.CurrentUser() == null)
    {
        Response.Redirect(Url.Action("Index", "Login"));
    }
    else
    {
        Umodel = MvcCore.Unity.Get<JN.Data.Service.IUserService>().Single(JN.Services.UserLoginHelper.CurrentUser().ID);
    }
    Layout = "~/Areas/APP/Views/Shared/_Layout" + JN.Services.Tool.ConfigHelper.GetConfigString("Theme") + ".cshtml";
}

<div class="wrapper">
    <div class="page_wrap">
        <div class="page">
            @Html.Partial("/Areas/APP/Views/Finance/_Finance.cshtml")
            <div class="main">
                <div class="main">
                    <div class="main_title">
                        @if (Model.UID == Umodel.ID && Model.ToUID == Umodel.ID)
                        {
                            @T("来自") @(Model.FormUserName) @T("的邮件")
                        }
                        else
                        {
                            @T("发给") @(Model.ToUserName) @T("的邮件")
                        }
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <!-- PAGE CONTENT BEGINS -->
                            <div class="tabbable">
                                <div class="breadcrumb" data-ng-show="breadcrumbs.length">
                                    @T("发送时间")：@(Model.CreateTime) <span>&nbsp;</span>
                                    @{
                                        if (Model.UID == Model.ToUID)
                                        {

                                            <a class="label arrowed-in-right arrowed label-success" href="/App/Mail/Write?r=@Model.ID">
                                                @T("回复")
                                            </a>
                                            <span>&nbsp;</span>
                                            <a class="label arrowed-in-right arrowed label-success" href="/App/Mail/Write?f=@Model.ID">
                                                @T("秒送")
                                            </a> <span>&nbsp;</span>
                                        }
                                    }
                                    <a class="label arrowed-in-right arrowed label-success del" data-value="@Model.ID" href="#">
                                        @T("删除")
                                    </a>
                                </div>
                                <span>



                                </span>

                                <p>
                                    @MvcHtmlString.Create(Model.Content)
                                </p>
                                @if (!string.IsNullOrEmpty(Model.Attachment))
            {
                                    <p><br /><br /><hr />附件：<br /> <img src="@Model.Attachment" style="max-width:500px" border="0" /></p>
                                }
                            </div><!-- /.row -->
                            <!-- PAGE CONTENT ENDS -->
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div>
                <script>IS_LOGIN = 1;</script>
                <br><br><br><br><br><br><br><br><br><br><br>
            </div>
        </div>
    </div>
</div>  
<!-- page specific plugin scripts -->
<script type="text/javascript">
    jQuery(function ($) {     
        $(".del").on("click", function () {
            var id = $(this).attr("data-value");

            if (M.dialog3) {
                return M.dialog3.show();
            }
            M.dialog3 = jqueryAlert({
                'title': '@T("温馨提示")',
                'content': '@T("您确定要删除该邮件吗?")',
                'modal': true,
                'buttons': {
                    '@T("确定")': function () {
                        M.dialog3.close();
                        location = '/App/Mail/Delete/' + id;
                    },
                    '@T("取消")': function () {
                        M.dialog3.close();
                    }
                }
            })

            @*if (confirm('@T("您确定要删除该邮件吗?")')) {
                 location = '/App/Mail/Delete/' + id;
            }*@
        });

        $('[data-rel=tooltip]').tooltip({ container: 'body' });
        bootbox.setDefaults({ locale: "zh_CN" });
    })
</script>