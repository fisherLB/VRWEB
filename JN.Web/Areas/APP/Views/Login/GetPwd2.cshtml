@{
    Layout = "~/Areas/APP/Views/Shared/_Layout" + JN.Services.Tool.ConfigHelper.GetConfigString("Theme") + ".cshtml";
    var sysSet = MvcCore.Unity.Get<JN.Data.Service.ISysSettingService>().Single(1);
}
<link href="/Theme/App/css/login.css" rel="stylesheet">
<header class="header">
    <div class="header-return">
        <a href="javascript:history.go(-1);"></a>
    </div>

    <div class="logo">@T("找回密码")</div>
</header>

<section class="container">
    <div class="register">
        <div class="form-widget">
            <form method="get" id="form-resetpw">
                <div class="form-box">
                    <div class="form-group">
                        <label class="form-label">@T("登录密码")</label>

                        <div class="form-control">
                            <input name="password" type="password" placeholder="@T("请输入登录密码")">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">@T("确认密码")</label>

                        <div class="form-control">
                            <input class="input" type="password" name="passwordcim" placeholder="@T("请确认登录密码")">
                        </div>
                    </div>
                </div>

                <div class="form-submit">
                    <button type="button" class="form-submit-btn" onclick="restpw()" id="btnEdit">@T("提交")</button>
                </div>
            </form>
        </div>
    </div>
</section>

<script>
    function restpw() {
        $('#btnEdit').attr("disabled", "disabled");
        $.post('/App/login/getpwd2', $('#form-resetpw').serialize(), function (d) {
            if (d.Status == 200) {
                layer.msg("@T("操作成功，即将为您跳转登录！")", { icon: 1 }, function () {
                    location.href = d.Message;
                });
            } else {
                layer.msg(d.Message, { icon: 2 });
                $('#btnEdit').removeAttr("disabled");
            }
        }, 'json')
    }
</script>
