@using Webdiyer.WebControls.Mvc
@model Webdiyer.WebControls.Mvc.PagedList<JN.Data.BonusDetail>
          
                    <!--数据开始-->
                  <table id="sample-table-1" width="100%" border="0" cellpadding="0" cellspacing="0" class="table_list">
    <thead>
        <tr>
            <th class="center">
                @T("序号")
            </th>
            @*<th>@T("用户名称")</th>*@
            <th>@T("奖金类型")</th>
            <th>@T("金额")</th>
            <th>@T("描述")</th>
            @*<th>@T("是否结算")</th>*@
            <th>
                <i class="icon-time bigger-110 hidden-480"></i>
                @T("时间")
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            for (int i = 0; i < Model.Count; i++)
            {

                <tr>
                    <td align="left">
                        @(i + 1)
                    </td>
                    @*<td>
                            @Model[i].UserName
                        </td>*@
                    <td>
                        @Model[i].BonusName
                    </td>
                    <td>
                        @Model[i].BonusMoney.ToString("F2")
                    </td>
                    <td>
                        @Model[i].Description
                    </td>
                    @*<td>
                            @T(Model[i].IsBalance ? "是" : "否")
                        </td>*@
                    <td class="hidden-480">@(Model[i].IsBalance ? Model[i].BalanceTime.ToString("yyyy-MM-dd HH:mm:ss") : "")</td>

                </tr>
            }
        }
         else
        {
<tr>
    <td colspan="5" class="no-data-tips"><span>@T("没有更多数据了~~")</span> </td>
</tr>
        }
    </tbody>

</table>

                    <!--分页-->
        

<div class="row">
    <div class="col-xs-8" style="margin: 0px 0 0 20px;">
        @Ajax.Pager(Model, new Webdiyer.WebControls.Mvc.PagerOptions
   {
       PageIndexParameterName = "Page",
       FirstPageText = "首页",
       LastPageText = "尾页",
       NextPageText = "下一页",
       PrevPageText = "上一页"
      , CurrentPagerItemTemplate = "<span class=\"current\">{0}</span>", DisabledPagerItemTemplate = "<span class=\"disabled\">{0}</span>", Id = "badoopager" 
   },
                                                                              new MvcAjaxOptions { UpdateTargetId = "_BonusDetail", HttpMethod = "Post" })
      
    </div>
</div>