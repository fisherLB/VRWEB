@using Webdiyer.WebControls.Mvc
@model Webdiyer.WebControls.Mvc.PagedList<JN.Data.User>
@{
    Layout = "~/Areas/APP/Views/Shared/_Layout" + JN.Services.Tool.ConfigHelper.GetConfigString("Theme") + ".cshtml";
}

<div class="container clear-float main">
    @Html.Partial("/Areas/APP/Views/Home/_Security.cshtml")
    <div class="fr">
        <div class="setting-title">@T("您屏蔽的人")</div>
        <div class="setting-panel">
            <table class="table buy">
                @if (Model.Count > 0)
                {
                    <thead>
                        <tr>
                            <th class="pl-30">@T("用户名")</th>
                            <th>@T("真实姓名")</th>
                            <th>@T("手机号码")</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr class="odd">
                                <td class="td-name pl-30"> @item.UserName</td>
                                <td>@item.RealName</td>
                                <td>@item.Mobile</td>
                                <td class="pr-30"></td>
                            </tr>
                        }
                    </tbody>
                }
                else
                {
                    <tr>
                        <td colspan="8">
                            <div class="no-record">
                                <div class="icon-no-record"></div>
                                <div class="text-no-record">@T("暂无您屏蔽的人")</div>
                            </div>
                        </td>
                    </tr>
                }
            </table>

        </div>
    </div>
</div>


